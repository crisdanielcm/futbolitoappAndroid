<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/layoutBackground">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:gravity="top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:id="@+id/imageViewEstadoLocal"
                        android:src="@drawable/xg"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/localButton"
                        android:src="@drawable/barcelonafc"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="fitCenter"
                        android:background="#00ffffff"
                        android:clickable="true" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_nombre_local"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:text="F:C Barcelona"
                    android:textColor="#ffffff"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="45dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/textView_marcador_local"
                        android:text="10"
                        android:layout_weight="0.3"
                        android:textSize="34dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:enabled="true" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageViewEstadoMarcadorLocal"
                        android:src="@drawable/chulitoverdep"
                        android:scaleType="fitStart"
                        android:layout_gravity="top|center"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center_horizontal"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:id="@+id/textView_marca"
                            android:layout_gravity="center"
                            android:text="1-1"
                            android:background="@drawable/border_texview_marcador"
                            android:layout_marginBottom="15dp"
                            android:textColor="#fff"
                            android:textSize="22dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="12 puntos"
                            android:id="@+id/textViewPuntos"
                            android:textColor="#1d9000"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:layout_gravity="top|center"
                            android:gravity="top|center"
                            android:foregroundGravity="top" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/textView_marcador_visitante"
                        android:text="10"
                        android:textSize="34dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:editable="false"
                        android:enabled="true" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageViewEstadoMarcadorVisitante"
                        android:layout_weight="1"
                        android:src="@drawable/xp"
                        android:scaleType="fitStart"
                        android:layout_gravity="top|center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingTop="5dp"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="top">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/visitanteButton"
                        android:src="@drawable/realmadrid"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="fitCenter"
                        android:background="#00ffffff"
                        android:clickable="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/imageViewEstadoVisitante"
                        android:src="@drawable/chulitoverdeg"
                        android:scaleType="fitCenter"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_nombre_visitante"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:text="Real Mandril F.C."
                    android:textColor="#ffffff"
                    android:textAlignment="center" />

            </LinearLayout>
        </TableRow>
    </LinearLayout>

</LinearLayout>