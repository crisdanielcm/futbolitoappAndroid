<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fondomarcadores01">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Resumen de la semana"
            android:id="@+id/textView9"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="top|center"
            android:gravity="top|center_vertical|center_horizontal">

            <Space
                android:layout_width="30px"
                android:layout_height="20px" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/tableroresumen"
                android:id="@+id/l1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Puntos Semana"
                    android:id="@+id/textView13"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textViewPP"
                        android:layout_below="@+id/textViewSp"
                        android:layout_toRightOf="@+id/textViewSp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="36dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textViewSp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="36dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textViewTP"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="36dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:layout_weight="1.3" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/tableroresumen"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Temporada"
                    android:id="@+id/textView14"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textView15"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textSize="36dp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textView16"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#fff"
                        android:textSize="36dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textView17"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textSize="36dp"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="30px"
                android:layout_height="20px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>